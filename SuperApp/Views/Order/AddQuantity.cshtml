@model P1_ModelLib.ViewModels.InventoryViewModel

@{
    ViewData["Title"] = "AddQuantity";
}

<h1>Product</h1>

<h4>Input the Desired Quantity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuantity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InventoryID" />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CreateCart">Back to List</a>
</div>

