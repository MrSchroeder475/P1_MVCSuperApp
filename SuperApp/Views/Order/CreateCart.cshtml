@model IEnumerable<P1_ModelLib.ViewModels.InventoryViewModel>

@{
    ViewData["Title"] = "Shopping time";
}



<h1>Inventory from store @ViewBag.StoreName</h1>

    
<div style="color:red;">@Html.ValidationSummary()</div>
<div class="row">
    <!--Show details are saved successfully message-->
    <div class="col-lg-12">@ViewBag.Message</div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    <a asp-action="AddQuantity" asp-route-Inventoryid="@item.InventoryID">Add to the order.</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="row">
    <div class="col-md-6">
        <a asp-action="FinishOrder" >Finish the Order</a>

    </div>
    <div class="col-md-6">
        <a asp-action="Index">Return to the orders menu</a>

    </div>
</div>

